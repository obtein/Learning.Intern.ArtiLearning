<Window x:Class="UkaUart0.MVVM.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UkaUart0.MVVM.View"
        xmlns:vm="clr-namespace:UkaUart0.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainView" Height="450" Width="800" ResizeMode="CanMinimize">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Background="DarkGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Communication type select-->
        <DockPanel Grid.Column="0"
                   Grid.Row="0"
            VerticalAlignment="Top" 
           HorizontalAlignment="Left" 
           Width="150">
            <Menu DockPanel.Dock="Top"
          Background="LightYellow">
                <MenuItem Header="Serial" 
                          Command="{Binding SerialComSelectedCommand}"
                          >
                </MenuItem>
                <Separator/>
                <MenuItem Header="Ethernet"
                          Command="{Binding EthernetComSelectedCommand}">
                </MenuItem>
            </Menu>
            <Button Command="{Binding CommunicationStartedCommand}" IsEnabled="{Binding ButtonActivity[2], UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">Start</Button>
        </DockPanel>
        <!--Side Menu-->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
            <Button IsEnabled="{Binding ButtonActivity[3], UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">Stop</Button>
            <Canvas Height="250" Background="LightGoldenrodYellow"></Canvas>
            <Button IsEnabled="{Binding ButtonActivity[4], UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">Logs</Button>
            <Image></Image>
            <Button IsEnabled="{Binding ButtonActivity[5], UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">Settings</Button>
        </StackPanel>
        <!--Serial Panel : Communication details-->
        <StackPanel 
            Grid.Row="0" 
            Grid.Column="1"
            Orientation="Horizontal"
            CanHorizontallyScroll="False"
            Height="25"
            Background="LightYellow" Visibility="{Binding UIVisibilityTracker[0], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <Label Content="Port"/>
            <ComboBox MinWidth="75" ItemsSource="{Binding ComPortsToBeShown, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" SelectedValue="{Binding SerialPortToBeOpenedDetails[0], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Label Content="BaudRate"/>
            <ComboBox MinWidth="75" ItemsSource="{Binding BaudListToBeShown}" SelectedItem="{Binding SerialPortToBeOpenedDetails[1], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Label Content="Parity"/>
            <ComboBox MinWidth="75" ItemsSource="{Binding ParityListToBeShown}" SelectedItem="{Binding SerialPortToBeOpenedDetails[2], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Label Content="StopBit"/>
            <ComboBox MinWidth="75" ItemsSource="{Binding StopBitListToBeShown}" SelectedItem="{Binding SerialPortToBeOpenedDetails[4], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            <Label Content="HandShake"/>
            <ComboBox MinWidth="75" ItemsSource="{Binding HandShakeListToBeShown}" SelectedItem="{Binding SerialPortToBeOpenedDetails[5], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        </StackPanel>
        <!--Ethernet Panel : Communication details-->
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Orientation="Horizontal"
            CanHorizontallyScroll="False"
            Height="25"
            Background="LightYellow" Visibility="{Binding UIVisibilityTracker[1], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <Label Content="Port"/>
            <ComboBox MinWidth="75"/>
            <Label Content="BaudRate"/>
            <ComboBox MinWidth="75"/>
            <Label Content="Parity"/>
            <ComboBox MinWidth="75"/>
            <Label Content="StopBit"/>
            <ComboBox MinWidth="75"/>
            <Label Content="HandShake"/>
            <ComboBox MinWidth="75"/>
        </StackPanel>
        <!--Card Headers Communication is active and card labels are shown-->
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Orientation="Horizontal"
            CanHorizontallyScroll="False"
            Height="25"
            Background="LightYellow" Visibility="{Binding UIVisibilityTracker[2], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <Label Content="                        Card 1 " Width="215"/>
            <Label Content="                        Card 2" Width="215"/>
            <Label Content="                        Card 3" Width="215"/>
        </StackPanel>
        <!--CARD UI-->
        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--Card 1-->
            <Grid Grid.Column="0" Margin="0,0,15,0" 
                  Visibility="{Binding Card1Visibility[0], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--Card 1 Channel 1-->
                <Grid Grid.Row="0"
                      Grid.Column="0" Visibility="{Binding Card1Visibility[1], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0,0,1,0"
                      >
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF5D668C" Offset="0"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--Open close channel-->
                    <Ellipse Grid.Row="0" Grid.Column="0"
                             Height="20" Width="20"
                             Fill="{Binding Card1CommunicationStatus[1], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                             StrokeDashCap="Round" StrokeEndLineCap="Round" 
                             StrokeStartLineCap="Round" StrokeLineJoin="Round" StrokeThickness="4">
                        <Ellipse.Effect>
                            <DropShadowEffect/>
                        </Ellipse.Effect>
                        <Ellipse.Stroke>
                            <RadialGradientBrush>
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="White" Offset="0.674"/>
                                <GradientStop Color="#FF3C3434" Offset="0.798"/>
                            </RadialGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                    <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4"
                           Content="Ch1 I: 25.7" FontFamily="Cascadia Mono" 
                           FontSize="10" Foreground="#FF900A00"
                           Opacity="{Binding Card1Activity[1] , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                    <!--Voltage Error #FF56FF00 for ok, Red for Error-->
                    <Ellipse Grid.Row="2" Grid.Column="1"
                             Height="20" Width="20" 
                             StrokeThickness="3" 
                             StrokeDashCap="Round" 
                             Stretch="UniformToFill" StrokeEndLineCap="Round" 
                             StrokeStartLineCap="Round"
                             Opacity="{Binding Card1Activity[1] , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <Ellipse.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="White"/>
                                <GradientStop Color="{Binding Card1ChannelErrorStatus[2], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" 
                                              Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Stroke>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF050505"/>
                                <GradientStop Color="#FF545450" Offset="1"/>
                                <GradientStop Color="#FF8A6914" Offset="0.5"/>
                            </RadialGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                    <!--Over Current Error-->
                    <Ellipse Grid.Row="2" Grid.Column="2"
                             Height="20" Width="20" 
                             StrokeThickness="3" StrokeDashCap="Round" 
                             Stretch="UniformToFill" StrokeEndLineCap="Round" 
                             StrokeStartLineCap="Round"
                             Opacity="{Binding Card1Activity[1] , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <Ellipse.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="White"/>
                                <GradientStop Color="{Binding Card1ChannelErrorStatus[1], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Stroke>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF050505"/>
                                <GradientStop Color="#FF545450" Offset="1"/>
                                <GradientStop Color="#FF8A6914" Offset="0.5"/>
                            </RadialGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                    <!--Short Circuit Error-->
                    <Ellipse Grid.Row="2" Grid.Column="3"
                             Height="20" Width="20" StrokeThickness="3" 
                             StrokeDashCap="Round" Stretch="UniformToFill"
                             StrokeEndLineCap="Round" StrokeStartLineCap="Round"
                             Opacity="{Binding Card1Activity[1] , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <Ellipse.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="White"/>
                                <GradientStop Color="{Binding Card1ChannelErrorStatus[0], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Stroke>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF050505"/>
                                <GradientStop Color="#FF545450" Offset="1"/>
                                <GradientStop Color="#FF8A6914" Offset="0.5"/>
                            </RadialGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                </Grid>
                <!--Card 1 Channel 2-->
                <Grid Grid.Row="0" 
                      Grid.Column="1" Visibility="{Binding Card1Visibility[2], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="1,0,0,0">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF5D668C" Offset="0"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
