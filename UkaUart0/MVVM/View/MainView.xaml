                            </RadialGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                    <!--Over Current Error-->
                    <Ellipse Grid.Row="2" Grid.Column="2"
                             Height="20" Width="20" StrokeThickness="3"
                             StrokeDashCap="Round" Stretch="UniformToFill"
                             StrokeEndLineCap="Round" StrokeStartLineCap="Round"
                             Opacity="{Binding Card1Activity[4] , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <Ellipse.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="White"/>
                                <GradientStop Color="{Binding Card1ChannelErrorStatus[10], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Stroke>
                            <RadialGradientBrush>
