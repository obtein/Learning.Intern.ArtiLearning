                            </RadialGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                    <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4"
                           Content="Ch3 I: 25.7" 
                           FontFamily="Cascadia Mono" FontSize="10" 
                           Foreground="#FF900A00"
                           Opacity="{Binding Card1Activity[3] , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                    <!--Voltage Error-->
                    <Ellipse Grid.Row="2" Grid.Column="1"
                             Height="20" Width="20" StrokeThickness="3"
                             StrokeDashCap="Round" Stretch="UniformToFill"
                             StrokeEndLineCap="Round" StrokeStartLineCap="Round"
                             Opacity="{Binding Card1Activity[3] , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <Ellipse.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="White"/>
                                <GradientStop Color="{Binding Card1ChannelErrorStatus[8], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Stroke>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF050505"/>
                                <GradientStop Color="#FF545450" Offset="1"/>
                                <GradientStop Color="#FF8A6914" Offset="0.5"/>
                            </RadialGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                    <!--Over Current Error-->
                    <Ellipse Grid.Row="2" Grid.Column="2"
                             Height="20" Width="20" StrokeThickness="3"
                             StrokeDashCap="Round" Stretch="UniformToFill"
                             StrokeEndLineCap="Round" StrokeStartLineCap="Round"
                             Opacity="{Binding Card1Activity[3] , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <Ellipse.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="White"/>
                                <GradientStop Color="{Binding Card1ChannelErrorStatus[7], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Stroke>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF050505"/>
                                <GradientStop Color="#FF545450" Offset="1"/>
                                <GradientStop Color="#FF8A6914" Offset="0.5"/>
                            </RadialGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                    <!--Short Circuit Error-->
                    <Ellipse Grid.Row="2" Grid.Column="3"
                             Height="20" Width="20" StrokeThickness="3"
                             StrokeDashCap="Round" Stretch="UniformToFill"
                             StrokeEndLineCap="Round" StrokeStartLineCap="Round"
                             Opacity="{Binding Card1Activity[3] , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <Ellipse.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="White"/>
                                <GradientStop Color="{Binding Card1ChannelErrorStatus[6], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Stroke>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF050505"/>
                                <GradientStop Color="#FF545450" Offset="1"/>
                                <GradientStop Color="#FF8A6914" Offset="0.5"/>
                            </RadialGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                </Grid>
                <!--Card 1 Channel 4-->
                <Grid Grid.Row="1" 
                      Grid.Column="1"  Visibility="{Binding Card1Visibility[4], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="1,0,0,0">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF5D668C" Offset="0"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--Open close channel-->
                    <Ellipse Grid.Row="0" Grid.Column="0"
                             Height="20" Width="20"
                             Fill="{Binding Card1CommunicationStatus[4], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                             StrokeDashCap="Round" StrokeEndLineCap="Round" 
                             StrokeStartLineCap="Round" StrokeThickness="4">
                        <Ellipse.Effect>
                            <DropShadowEffect/>
                        </Ellipse.Effect>
                        <Ellipse.Stroke>
                            <RadialGradientBrush>
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="White" Offset="0.674"/>
                                <GradientStop Color="#FF3C3434" Offset="0.798"/>
                            </RadialGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                    <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4"
                           Content="Ch4 I: 25.7"
                           FontFamily="Cascadia Mono" FontSize="10"
                           Foreground="#FF900A00"
                           Opacity="{Binding Card1Activity[4] , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                    <!--Voltage Error-->
                    <Ellipse Grid.Row="2" Grid.Column="1"
                             Height="20" Width="20" StrokeThickness="3"
                             StrokeDashCap="Round" Stretch="UniformToFill"
                             StrokeEndLineCap="Round" StrokeStartLineCap="Round"
                             Opacity="{Binding Card1Activity[4] , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <Ellipse.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="White"/>
                                <GradientStop Color="{Binding Card1ChannelErrorStatus[11], UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Stroke>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF050505"/>
                                <GradientStop Color="#FF545450" Offset="1"/>
