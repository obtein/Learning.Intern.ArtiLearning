                                <GradientStop Color="#FF050505"/>
                                <GradientStop Color="#FF545450" Offset="1"/>
                                <GradientStop Color="#FF8A6914" Offset="0.5"/>
                            </RadialGradientBrush>
                        </Ellipse.Stroke>
                    </Ellipse>
                </Grid>
                <!--Card 1 Channel 5-->
                <Grid Grid.Row="2"
                      Grid.Column="0" Visibility="{Binding Card1Visibility[5], UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0,0,1,0">
                    <Grid.Background>
